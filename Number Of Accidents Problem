#include <iostream> 
using namespace std;

 class Area{
     protected:
        int numOfAccidents;
        
     public:
       void getnumOfAccidents(numOfAccidents)
 }

  class north: public Area{
      protected:
        int numOfAccidents;
        
      public:
       void getnumOfAccidents(numOfAccidents)
  }
  
  class south: public Area{
      protected:
        int numOfAccidents;
        
      public:
       void getnumOfAccidents(numOfAccidents)
  }
  
  class east : public Area{
      protected:
        int numOfAccidents;
        
      public:
       void getnumOfAccidents(numOfAccidents)
  }
  
  class west: public Area{
      protected:
        int numOfAccidents;
        
      public:
       void getnumOfAccidents(numOfAccidents)
      
  } 

   
  
